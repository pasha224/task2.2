<%-include('header')-%>
<div class="text-center center-div" id="login">
<div class="container w-25 border py-5">
    <div class="title pb-5">
        <h2 class="font-weight-bold">
           login-system
        </h2>
        <span>
            log in for the existing user
        </span>
       
    </div>
    <form action="/route/login" method="POST" class="pt-2">
    <div class="form-group">
        <input type="email" class="form-control" placeholder="email" name="email">
        <small class="form-text text-muted text-left">Register email number</small>
    </div>
    <div class="form-group">
        <input type="string" class="form-control" placeholder="phone" name="phone">
        <small class="form-text text-muted text-left">Register phone number</small>
    </div>
    <div class="form-group">
        <input type="password" class="form-control" name="password" placeholder="otp">
    </div>
    <br>
    <button type="submit" class="btn btn-success rounded-pi">submit</button>
    </form>
</div>
</div>
<% if(locals.logout){%>
    <div class="alter alter-success text-center">
     <%=logout %>
    </div>
      <%}%>  

<%-include('footer')-%>

    
